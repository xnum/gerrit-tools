# Gerrit Tools Configuration Example
# Copy this file to config.yaml for local development.
# Do not commit config.yaml (contains sensitive credentials).

gerrit:
  # SSH connection for git operations
  ssh_alias: gerrit-review

  # HTTP/REST API connection
  http_url: https://gerrit.example.com
  http_user: your-username
  http_password: your-http-password

git:
  repo_base_path: /tmp/ai-review-repos

review:
  cli: claude # claude or codex
  claude_timeout: 600
  claude_skip_permissions: false

serve:
  workers: 1
  queue_size: 100
  lazy_mode: false
  filter:
    projects: []
    exclude: []

output:
  format: json
  color: true

logging:
  level: info
  verbose: false
  file: ""
